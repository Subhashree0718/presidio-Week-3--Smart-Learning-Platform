{
  "openapi": "3.0.0",
  "info": {
    "title": "Course Service API",
    "version": "1.0.0",
    "description": "API for managing courses in Smart Learning Platform"
  },
  "paths": {
    "/courses": {
      "get": {
        "summary": "Get all courses",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 5 } },
          { "name": "category", "in": "query", "schema": { "type": "string" } },
          { "name": "sort", "in": "query", "schema": { "type": "string", "enum": ["rating_asc", "rating_desc"] } }
        ],
        "responses": {
          "200": { "description": "List of courses with pagination and HATEOAS links" }
        }
      },
      "post": {
        "summary": "Create a new course",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "course_title": { "type": "string", "example": "React Basics" },
                  "course_description": { "type": "string", "example": "Intro to React" },
                  "course_category": { "type": "string", "example": "tech" },
                  "course_rating": { "type": "number", "example": 4.5 },
                  "teacher_id": { "type": "integer", "example": 1 }
                },
                "required": ["course_title", "course_description", "course_category", "teacher_id"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Course created successfully" },
          "403": { "description": "Forbidden: Access denied" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/courses/{courseId}/enroll": {
      "post": {
        "summary": "Enroll student to a course",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "courseId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "studentId": { "type": "integer", "example": 2 } },
                "required": ["studentId"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Student enrolled successfully" },
          "403": { "description": "Forbidden: Access denied" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/courses/recommendations": {
      "get": {
        "summary": "Get course recommendations (Promises)",
        "responses": {
          "200": { "description": "List of recommended courses" },
          "429": { "description": "Too many requests (rate limit 10/min)" }
        }
      }
    },
    "/courses/recommendations-async": {
      "get": {
        "summary": "Get course recommendations (Async/Await)",
        "responses": {
          "200": { "description": "List of recommended courses" },
          "429": { "description": "Too many requests (rate limit 10/min)" }
        }
      }
    },
    "/courses/analytics": {
      "get": {
        "summary": "Analytics data (admin + API key)",
        "parameters": [
          {
            "name": "apiKey",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "example": "validKey" }
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Analytics data returned" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden: Invalid API Key or role" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  }
}
